{% extends "EcoleSiteBundle::layout.html.twig" %}
 
   {% block  content %}
      <div class="row">
        <div class="col-sm-12"> 
            <h4 class="titreM light-green">Collège</h4>
            <div id="contenu" style="border-color: green">
                 <div class="w3-container">
                    <p style="text-align: justify">
                        
                    </p> 
                </div>
               <div class="w3-container">
                  <ul class="nav nav-tabs nav-justified">
                    <li  class="active"><a href="{{path('ecole_college_objectif')}}">Objectifs</a></li>
                    <li><a href="{{path('ecole_college_classe')}}">Classes</a></li>
                    <li><a href="{{path('ecole_college_program')}}">Programmes</a></li>
                    <li><a href="{{path('ecole_college_biblio')}}">Bibliothèques</a></li>
                  </ul>
  
                    <div class="tab-content w3-border-bottom w3-border-left w3-border-right blanc">
                        <div class="w3-container">
                         {% for contenu in contenus %}
                            {% if contenu.type == 'objectifCollege' %}
                                {{ contenu.contenu|raw }}
                            {% endif %}
                         {% endfor %}
                        </div>
                    </div>
               </div>
            </div>
        </div> 
      </div>    
         {% block javascript %}     
           <script>
              $(function(){
                 $('#notrecole').addClass('active');
                 $('#home').removeClass('active');
                 $('#lycee').addClass('yellow');
                 $('#reseaux').hide();
              });
          </script>
        {% endblock %}
   {% endblock %}  
  


